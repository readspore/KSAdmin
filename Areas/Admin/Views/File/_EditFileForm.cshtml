@model KSAdmin.Areas.Admin.Models.FileModel

<form asp-action="Edit" asp-controller="File" method="post" enctype="multipart/form-data" class="d-flex" onsubmit="pdFileManager.editFileData(event, @Model.Id)">
    <div class="img-wrap-1 hover-children-tile__fade-toggle">
        <div class="img-wrap-2">
            <img src="@Url.Content(Model.Path)">
            @Html.HiddenFor(m => m.Path)
        </div>
    </div>
    <div class="d-flex f-col">
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="d-flex f-col" style="justify-content: space-around;">
            <input type="submit" value="Обновить" style="height: fit-content;" class="btn btn-success" />
            <a onclick="pdFileManager.deleteFile(event, @Model.Id)" class="btn btn-danger">Удалить</a>
        </div>
    </div>
</form>
